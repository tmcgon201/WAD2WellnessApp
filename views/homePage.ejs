        <div class="row mx-auto w-50 bg-white rounded shadow-sm pb-4">
            <div class="col mx-auto pb-3">
                <!-- form -->
                <form id="contact-form" name="contact-form" action="/sendEmail" method="POST">
                    <div class="row mb-3 mt-3">
                        <!-- contact name -->
                        <div class="col-md-6">
                            <div class="md-form">
                                <input type="text" id="name" name="name" class="form-control" placeholder="Name" required/>
                            </div>
                        </div>
                        <!-- contact email -->
                        <div class="col-md-6">
                            <div class="md-form">
                                <input type="text" id="email" name="email" class="form-control" placeholder="Email" required/>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <!-- message subject -->
                        <div class="col-md-12">
                            <div class="md-form">
                                <input type="text" id="subject" name="subject" class="form-control" placeholder="Subject" required/>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <!-- message -->
                        <div class="col-md-12">
                            <div class="md-form">
                                <textarea type="text" id="message" name="message" rows="2"
                                    class="form-control md-textarea" placeholder="Your message" required></textarea>
                            </div>
                        </div>
                    </div>
                    <% if (typeof user !="undefined"){%>
                        <div class="row mb-3 d-none">
                            <!-- pass info to server to determine what route to redirect to -->
                            <div class="col-md-12">
                                <div class="md-form">
                                    <input class="form-check-input" type="checkbox" value="true" id="loggedin" name="loggedin" checked>
                                </div>
                            </div>
                        </div>
                    <%}%>
                    <div class="text-center mx-auto">
                        <button class="btn btn-block shadow-sm" style='background-color:#98fbca'
                            type="submit">Send</button>
                    </div>
                </form>
                <!-- submit -->
                
            </div>
        </div>
    </section>
